{
  "manifest_version": 3,
  "name": "Scroll Toll",
  "version": "1.0.0",
  "description": "Chrome extension with React",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*"
    ]
  }
}